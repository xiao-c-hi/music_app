<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_outer">

    <!--标题-->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是标题"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <!--信息容器-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:orientation="horizontal">

        <!--发布时间-->
        <TextView
            android:id="@+id/create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_created_at"
            android:textColor="@color/black80"
            android:textSize="@dimen/text_small" />

        <!--播放量-->
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/video_clicks_count"
            android:textColor="@color/black80"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <!--标签流
    官方文档：https://material.io/components/chips/android#using-chips-->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"></com.google.android.material.chip.ChipGroup>

    <!--按钮容器
   这部分可以像首页侧滑菜单那样重构到样式文件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:layout_marginBottom="@dimen/padding_meddle"
        android:orientation="horizontal">
        <!--按钮容器-->
        <LinearLayout
            android:id="@+id/comment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--图标-->
            <ImageView
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_marginBottom="@dimen/padding_meddle"
                android:src="@drawable/thumb" />

            <!--文本-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1228"
                android:textColor="@color/black80" />
        </LinearLayout>

        <!--按钮容器-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--图标-->
            <ImageView
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_marginBottom="@dimen/padding_meddle"
                android:src="@drawable/thumb" />

            <!--文本-->
            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="228"
                android:textColor="@color/black80" />
        </LinearLayout>

        <!--按钮容器-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--图标-->
            <ImageView
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_marginBottom="@dimen/padding_meddle"
                android:src="@drawable/thumb" />

            <!--文本-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:textColor="@color/black80" />
        </LinearLayout>

        <!--按钮容器-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--图标-->
            <ImageView
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_marginBottom="@dimen/padding_meddle"
                android:src="@drawable/thumb" />

            <!--文本-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multi_select"
                android:textColor="@color/black80" />
        </LinearLayout>
    </LinearLayout>

    <!--分割线-->
    <include layout="@layout/divider_small" />

    <!--用户信息容器-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/avatar_width_meddle"
            android:layout_height="@dimen/avatar_width_meddle"
            android:src="@drawable/placeholder" />

        <!--昵称-->
        <TextView
            android:id="@+id/nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_weight="1"
            android:text="这是昵称"
            android:textColor="?attr/colorOnSurface" />

        <!--关注按钮-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:background="@drawable/selector_primary"
            android:gravity="center"
            android:minWidth="@dimen/d80"
            android:text="+关注"
            android:textColor="@drawable/selector_text_primary_reverse" />
    </LinearLayout>
</LinearLayout>