<?xml version="1.0" encoding="utf-8"?><!--横向占4格，纵向占1格
只支持有限的布局，详细的查看：https://developer.android.google.cn/guide/topics/appwidgets#CreatingLayout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_widget"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/widget_padding_start"
    android:paddingEnd="@dimen/padding_meddle"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_meddle"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/d3">

        <!--标题-->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/empty_song_tip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_meddle" />
        <!--进度条-->
        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:max="100"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:progress="10"
            android:progressDrawable="@drawable/shape_seek_bar" />

        <!--控制容器-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_small"
                android:layout_weight="1"
                android:padding="@dimen/d5"
                android:src="@drawable/thumb"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_small"
                android:layout_weight="1"
                android:padding="@dimen/d5"
                android:src="@drawable/music_previous" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_small"
                android:layout_weight="1"
                android:padding="@dimen/d3"
                android:src="@drawable/music_play" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_small"
                android:layout_weight="1"
                android:padding="@dimen/d5"
                android:src="@drawable/music_next" />

            <ImageView
                android:id="@+id/lyric"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_small"
                android:layout_weight="1"
                android:padding="@dimen/d2"
                android:src="@drawable/ic_lyric_selected"
                android:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>