<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--封面-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/d35"
        android:layout_height="@dimen/d35"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImageStyle"
        tools:src="@drawable/placeholder" />

    <!--标题容器-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--标题-->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/s15"
            tools:text="这是歌曲名称这是歌这是歌曲名称这是歌曲名称这是歌曲名称曲名称这是歌曲名称" />

        <!--歌词控件-->
        <com.example.courses.mymusic.component.lyric.view.LyricLineView
            android:id="@+id/lyric_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lyric_height_small"
            app:gravity="left"
            app:selected_text_color="?attr/colorPrimary"
            app:text_color="@color/black80"
            app:text_size="@dimen/text_small" />
    </LinearLayout>
</LinearLayout>