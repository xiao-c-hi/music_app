<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.courses.mymusic.component.about.activity.AboutActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!--logo-->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d40"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/RoundedCornerImageStyle" />

        <!--版本-->
        <com.example.superui.setting.SuperItemSettingView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d40"
            app:more_text="@string/version_value"
            app:src="@drawable/scan"
            app:title_text="@string/current_version" />

        <!--功能介绍-->
        <LinearLayout
            android:id="@+id/friend_container"
            style="@style/SuperSettingContainer"
            android:layout_marginTop="@dimen/d10">

            <TextView
                style="@style/SuperSettingTitle"
                android:text="@string/function_introduction" />

            <ImageView style="@style/SuperSettingMore" />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>