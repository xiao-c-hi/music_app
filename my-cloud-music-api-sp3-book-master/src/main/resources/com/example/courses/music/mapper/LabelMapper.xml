<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"  >
<mapper namespace="com.example.courses.music.mapper.LabelMapper">
    <!--创建/替换标签关系-->
    <insert id="replace">
        replace into label
        (
        id,
        tag_id,
        sheet_id,
        user_id
        )
        values
        <foreach collection="labels" item="item" separator=",">
            (#{item.id}, #{item.tagId}, #{item.sheetId}, #{item.userId})
        </foreach>
    </insert>
</mapper>